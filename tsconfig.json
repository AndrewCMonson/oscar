{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["packages/api/*"],
      "@client/*": ["packages/client/src/*"],
      "@oscar/types": ["packages/types/src/index.ts"]
    }
  },
  "include": ["./packages/**/*"]
}
